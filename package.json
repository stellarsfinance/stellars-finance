{
  "name": "stellars-finance",
  "version": "1.0.0",
  "private": true,
  "description": "Stellars Finance - Decentralized Perpetuals Platform",
  "license": "ISC",
  "author": "",
  "workspaces": [
    "bindings/*",
    "packages/*",
    "frontend"
  ],
  "scripts": {
    "dev": "npm run dev --w @stellars-finance/frontend",
    "build": "npm run build --w @stellars-finance/frontend",
    "build:contracts": "bash scripts/build-contracts.sh",
    "generate:bindings": "bash scripts/generate-bindings.sh",
    "test:contracts": "cd contracts && cargo test --workspace",
    "test:unit": "cd contracts && cargo test --workspace --lib",
    "test:e2e": "cd contracts && cargo test -p stellars-finance-integration-tests",
    "deploy:testnet": "tsx scripts/deploy.ts --network testnet",
    "deploy:mainnet": "tsx scripts/deploy.ts --network mainnet",
    "initialize:testnet": "tsx scripts/initialize.ts --network testnet",
    "initialize:mainnet": "tsx scripts/initialize.ts --network mainnet"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "urijs": "^1.19.11"
  }
}
